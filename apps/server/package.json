{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --env dev",
    "deploy": "wrangler deploy --minify --env prod",
    "cf-typegen": "wrangler types --env dev --env-interface CloudflareBindings",
    "auth:generate": "pnpm dlx @better-auth/cli@latest generate --config ./better-auth.config.ts --output ./src/db/schema/auth.ts",

    "db:dev:generate": "bun run --env-file=.dev.vars.dev drizzle-kit generate --config=drizzle.config.dev.ts",
    "db:prod:generate": "bun run --env-file=.dev.vars.prod drizzle-kit generate --config=drizzle.config.prod.ts",

    "db:dev:migrate": "bun run --env-file=.dev.vars.dev drizzle-kit migrate --config=drizzle.config.dev.ts",
    "db:prod:migrate": "bun run --env-file=.dev.vars.prod drizzle-kit migrate --config=drizzle.config.prod.ts",

    "db:dev:pull": "bun run --env-file=.dev.vars.dev drizzle-kit pull --config=drizzle.config.dev.ts",
    "db:prod:pull": "bun run --env-file=.dev.vars.prod drizzle-kit pull --config=drizzle.config.prod.ts",

    "db:dev:push": "bun run --env-file=.dev.vars.dev drizzle-kit push --config=drizzle.config.dev.ts",
    "db:prod:push": "bun run --env-file=.dev.vars.prod drizzle-kit push --config=drizzle.config.prod.ts",

    "db:dev:studio": "bun run --env-file=.dev.vars.dev drizzle-kit studio --config=drizzle.config.dev.ts",
    "db:prod:studio": "bun run --env-file=.dev.vars.prod drizzle-kit studio --config=drizzle.config.prod.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@libsql/client": "^0.15.10",
    "better-auth": "^1.3.3",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.8.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.4",
    "wrangler": "^4.4.0"
  }
}
