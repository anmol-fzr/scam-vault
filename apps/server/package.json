{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --env dev",
    "deploy": "wrangler deploy --minify --env prod",
    "cf-typegen": "wrangler types --env dev --env-interface CloudflareBindings",
    "auth:generate": "pnpm dlx @better-auth/cli@latest generate --config ./better-auth.config.ts --output ./src/db/schema/auth.ts",
    "db:generate": "bun run --env-file=.dev.vars.prod drizzle-kit generate",
    "db:dev:migrate": "bun run --env-file=.dev.vars.dev drizzle-kit migrate",
    "db:prod:migrate": "bun run --env-file=.dev.vars.prod drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@libsql/client": "^0.15.10",
    "better-auth": "^1.3.3",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.8.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.4",
    "wrangler": "^4.4.0"
  }
}
